<Window x:Class="Proyecto_2parcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_2parcial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Articulo" HorizontalAlignment="Left" Margin="66,40,0,0" VerticalAlignment="Top" Height="31" Width="66" FontSize="16"/>
        <ComboBox x:Name="articulo" HorizontalAlignment="Left" Margin="137,40,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Pizza</ComboBoxItem>
            <ComboBoxItem>Hamburguesa</ComboBoxItem>
            <ComboBoxItem>Sushi</ComboBoxItem>
            <ComboBoxItem>Carnes</ComboBoxItem>
            <ComboBoxItem>Ensaladas</ComboBoxItem>
            <ComboBoxItem>Bebida</ComboBoxItem>
        </ComboBox>
        <Button x:Name="BtnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="310,42,0,0" VerticalAlignment="Top" Width="75" Click="BtnAgregar_Click"/>
        <Grid x:Name="Formulario" HorizontalAlignment="Left" Height="343" Margin="0,76,0,0" VerticalAlignment="Top" Width="792"/>

    </Grid>
</Window>
